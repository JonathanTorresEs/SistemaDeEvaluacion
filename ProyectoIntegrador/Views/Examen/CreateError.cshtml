@model ProyectoIntegrador.ViewModels.ExamenCreateError

@{
    Layout = null;

}

@Html.Partial("~/Views/Partial/header.cshtml");



<!-- Page Content -->

<div id="page-wrapper">

    <div class="container-fluid">

        <div class="row bg-title">

            <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">

                <h4 class="page-title">Examen</h4>
            </div>

            <div class="col-lg-9 col-sm-8 col-md-8 col-xs-12">

                <ol class="breadcrumb">

                    <li><a href="#">Examenes</a></li>

                    <li class="active">Crear</li>

                </ol>

            </div>

            <!-- /.col-lg-12 -->

        </div>

        <!-- /row -->

        @if (Model.error != "")
    {
        <div class="row">
            <div class="col-sm-12">
                <div class="white-box" style="background: red">
                    <p style="color: white"> @Model.error </p>
                </div>
            </div>


        </div>

}

        <div class="row">

            <div class="col-sm-12">

                <div class="white-box">



                    <div class="row">
                        <div class="col-sm-12">
                            Crear examen:
                        </div>
                    </div>
                    <div class="row m-t-10">
                        <div class="col-sm-12">

                            @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-horizontal">
                                <h4>Crear Examen</h4>
                                <hr />
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div class="form-group">
                                    @Html.LabelFor(model => model.examen.Nombre, htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-4">
                                        @Html.EditorFor(model => model.examen.Nombre, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.examen.Nombre, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.examen.Descripcion, htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-8">
                                        @Html.EditorFor(model => model.examen.Descripcion, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.examen.Descripcion, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="control-label col-md-2">Temas</label>
                                    <div class="col-md-8">
                                        <select class="ui fluid search dropdown" name="temas">
                                            <!--<option value="">Tema</option>-->
                                            @if (ViewBag.Temas != null)
                                        {
                                            foreach (var item in ViewBag.Temas)
                                            {
                                                <option value="@(item.ClaveTema)">@(item.NombreTema)</option>
                                        }
                                    }
                                        </select>
                                    </div>
                                </div>

                                @*<div class="form-group">
                                    @Html.LabelFor(model => model.FechaDeCreacion, htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-4">
                                        @Html.EditorFor(model => model.FechaDeCreacion, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.FechaDeCreacion, "", new { @class = "text-danger" })
                                    </div>
                                </div>*@


                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-10">
                                        <input type="submit" value="Crear" class="btn btn-success" />
                                    </div>
                                </div>
                            </div>
                    }

                            <div>
                                @Html.ActionLink("Back to List", "Index")
                            </div>

                            @section Scripts {
                                @Scripts.Render("~/bundles/jqueryval")
                            }

                        </div>

                    </div>

                </div>

            </div>

        </div>

        @Html.Partial("~/Views/Partial/footer.cshtml");

