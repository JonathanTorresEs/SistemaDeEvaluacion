@model IEnumerable<ProyectoIntegrador.Models.Usuario>

@{
    Layout = null;

}

@Html.Partial("~/Views/Partial/header.cshtml");



<!-- Page Content -->

<div id="page-wrapper">

    <div class="container-fluid">

        <div class="row bg-title">

            <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">

                <h4 class="page-title">Usuarios</h4>
            </div>

            <div class="col-lg-9 col-sm-8 col-md-8 col-xs-12">

                <ol class="breadcrumb">

                    <li><a href="#">Usuarios</a></li>

                    <li class="active">Todos</li>

                </ol>

            </div>

            <!-- /.col-lg-12 -->

        </div>

        <!-- /row -->

        <div class="row">

            <div class="col-sm-12">

                <div class="white-box">

                    <div class="row">

                        <div class="col-sm-6">

                            <h3 class="box-title m-b-0">Usuarios</h3>

                            <p class="text-muted m-b-30">Todos los <span class="font-normal">temas</span></p>

                        </div>

                        <div class="col-sm-6">

                            <h3 class="box-title m-b-0 pull-right">

                                <a href="../Usuarios/Create" id="" class="btn btn-primary btn-outline"><i class="fa fa-plus"></i> Nuevo</a>

                            </h3>

                        </div>

                    </div>

                    <div class="table-responsive">

                        <table id="myTable" class="table table-striped">

                            <thead>

                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Nombre)
                                    </th>
                                    <th>
                                        Apellido Paterno
                                    </th>
                                    <th>
                                        Apellido Materno
                                    </th>
                                    <th>
                                        Correo Electrónico
                                    </th>
                                    <th></th>
                                </tr>

                            </thead>

                            <tbody>

                               @foreach (var item in Model)
            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Nombre)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ApellidoPaterno)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ApellidoMaterno)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CorreoElectronico)
                                    </td>
                                    <td>
                                        <a href="../Usuarios/Edit/@item.Id" class=" text-info" data-toggle="tooltip" data-original-title="Edit">
                                            <i class="fa fa-pencil"></i>
                                        </a>
                                        <a href="../Usuarios/Delete/@item.Id" class=" text-danger" data-toggle="tooltip" data-original-title="Delete">
                                            <i class="fa fa-trash"></i>
                                        </a>
                                    </td>
                                </tr>
                               }
                            </tbody>

                        </table>

                    </div>

                </div>

            </div>

        </div>

        @Html.Partial("~/Views/Partial/footer.cshtml");
