@model ProyectoIntegrador.ViewModels.TemaDuplicateKey

@{
    Layout = null;

}

@Html.Partial("~/Views/Partial/header.cshtml");



<!-- Page Content -->

<div id="page-wrapper">

    <div class="container-fluid">

        <div class="row bg-title">

            <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">

                <h4 class="page-title">Temas</h4>
            </div>

            <div class="col-lg-9 col-sm-8 col-md-8 col-xs-12">

                <ol class="breadcrumb">

                    <li><a href="#">Temas</a></li>

                    <li class="active">Crear</li>

                </ol>

            </div>

            <!-- /.col-lg-12 -->

        </div>

        <!-- /row -->

        @if (Model.error != "")
    {
        <div class="row">
            <div class="col-sm-12">
                <div class="white-box" style="background: red">
                    <p style="color: white"> @Model.error </p>
                </div>
            </div>


        </div>

}

        <div class="row">

            <div class="col-sm-12">

                <div class="white-box">



                    <div class="row">
                        <div class="col-sm-12">
                            Crear temas:
                        </div>
                    </div>
                    <div class="row m-t-10">
                        <div class="col-sm-12">

                            @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-horizontal">
                                <h4>Temas</h4>
                                <hr />
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div class="form-group">
                                    Clave del tema
                                    <div class="col-md-4">
                                        @Html.EditorFor(model => model.tema.ClaveTema, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.tema.ClaveTema, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    Nombre del tema
                                    <div class="col-md-4">
                                        @Html.EditorFor(model => model.tema.NombreTema, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.tema.NombreTema, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-10">
                                        <input type="submit" value="Crear" class="btn btn-success" />
                                    </div>
                                </div>
                            </div>
                    }

                            <div>
                                @Html.ActionLink("Volver", "Index")
                            </div>

                            @section Scripts {
                                @Scripts.Render("~/bundles/jqueryval")
                            }

                        </div>

                    </div>

                </div>

            </div>

        </div>

        @Html.Partial("~/Views/Partial/footer.cshtml");
