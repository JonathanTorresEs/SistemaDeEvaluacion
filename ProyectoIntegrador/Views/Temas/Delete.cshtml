@model ProyectoIntegrador.Models.Tema

@Html.Partial("~/Views/Partial/header.cshtml");

@{
    Layout = null;

}

<!-- Page Content -->

<div id="page-wrapper">

    <div class="container-fluid">

        <div class="row bg-title">

            <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">

                <h4 class="page-title">Temas</h4>
            </div>

            <div class="col-lg-9 col-sm-8 col-md-8 col-xs-12">

                <ol class="breadcrumb">

                    <li><a href="#">Temas</a></li>

                    <li class="active">Borrar</li>

                </ol>

            </div>

            <!-- /.col-lg-12 -->

        </div>

        <!-- /row -->

        <div class="row">

            <div class="col-sm-12">

                <div class="white-box">



                    <div class="row">
                        <div class="col-sm-12">
                            Estas seguro que quieres borrar el tema: <span class="font-bold">@Model.ClaveTema</span>: <span class="font-bold">@Model.NombreTema</span>?
                        </div>
                    </div>
                    <div class="row m-t-10">
                        <div class="col-sm-12">

                            @using (Html.BeginForm())
            {
                                @Html.AntiForgeryToken()

                                <div class="form-actions">
                                    <input type="submit" value="BORRAR" class="btn btn-danger" />
                                    <a href="../" class="btn btn-default">Regresar</a>
                                </div>
                            }

                        </div>

                    </div>

                </div>

            </div>

        </div>

        @Html.Partial("~/Views/Partial/footer.cshtml");

