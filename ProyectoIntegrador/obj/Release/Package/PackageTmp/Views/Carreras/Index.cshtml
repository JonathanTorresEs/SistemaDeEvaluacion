@model IEnumerable<ProyectoIntegrador.Models.Carrera>

@{
    Layout = null;

}

@Html.Partial("~/Views/Partial/header.cshtml");



<!-- Page Content -->

<div id="page-wrapper">

    <div class="container-fluid">

        <div class="row bg-title">

            <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">

                <h4 class="page-title">Carreras</h4>
            </div>

            <div class="col-lg-9 col-sm-8 col-md-8 col-xs-12">

                <ol class="breadcrumb">

                    <li><a href="#">Carreras</a></li>

                    <li class="active">Todas</li>

                </ol>

            </div>

            <!-- /.col-lg-12 -->

        </div>

        <!-- /row -->

        <div class="row">

            <div class="col-sm-12">

                <div class="white-box">

                    <div class="row">

                        <div class="col-sm-6">

                            <h3 class="box-title m-b-0">Carreras</h3>

                            <p class="text-muted m-b-30">Todas las <span class="font-normal">carreras</span></p>

                        </div>

                        <div class="col-sm-6">

                            <h3 class="box-title m-b-0 pull-right">

                                <a href="../Carreras/Create" id="" class="btn btn-primary btn-outline"><i class="fa fa-plus"></i> Nueva</a>

                            </h3>

                        </div>

                    </div>

                    <div class="table-responsive">

                        <table id="myTable" class="table table-striped">

                            <thead>

                                <tr>

                                    <th class="">Nombre</th>

                                    <th class="text-center">Siglas</th>

                                    <th class="text-center">Acciones</th>

                                </tr>

                            </thead>

                            <tbody>

                                @foreach (var item in Model)
                                {

                                    <tr>
                                        <td class="">
                                            @Html.DisplayFor(modelItem => item.NombreLargo)
                                        </td>

                                        <td class="text-center">
                                            @Html.DisplayFor(modelItem => item.Siglas)
                                        </td>
                                        
                                        <td class="text-center">
                                            <a href="../Carreras/Edit/@item.Siglas" class=" text-info" data-toggle="tooltip" data-original-title="Edit">
                                                <i class="fa fa-pencil"></i>
                                            </a>
                                            <a href="../Carreras/Delete/@item.Siglas" class=" text-danger" data-toggle="tooltip" data-original-title="Delete">
                                                <i class="fa fa-trash"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>

                        </table>

                    </div>

                </div>

            </div>

        </div>

        @Html.Partial("~/Views/Partial/footer.cshtml");
